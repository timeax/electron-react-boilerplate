{
    "compilerOptions": {
        "incremental": true,
        "target": "es2022",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2022"
        ],
        "jsx": "react-jsx",
        "strict": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": ".erb/dll",
        "paths": {
            "@screens/*": [
                "./src/renderer/screens/*"
            ],
            "@layout/*": [
                "./src/renderer/layout/*"
            ],
            "@components/*": [
                "./src/renderer/components/*"
            ],
            "@assets/*": [
                "./src/renderer/assets/*"
            ],
            "@styles/*": [
                "./src/renderer/styles/*"
            ],
            "@widgets/*": [
                "./src/renderer/widgets/*"
            ],
        }
    },
    "exclude": [
        "test",
        "release/build",
        "release/app/dist",
        ".erb/dll"
    ]
}
